             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="LoginPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             Loaded="ContentPage_Loaded">
