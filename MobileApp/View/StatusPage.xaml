<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="MobileApp.View.StatusPage"
             IsVisible="{Binding SelectedView}">
    <VerticalStackLayout HeightRequest="400" WidthRequest="400">
        <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="Work in Progress, available soon..." FontAttributes="Bold" FontSize="16" TextColor="{DynamicResource Primary}"></Label>
        <skia:SKLottieView
                              Source="workinprogress.json"
                              RepeatCount="-1" 
                            RepeatMode="Restart"
                                HeightRequest="256"
                                WidthRequest="256"/>
    </VerticalStackLayout>
</ContentView>
